<h1><%= @post.title %></h1>
<h3>By: <%= link_to @post.blogger.name, blogger_path(@post.blogger) %> </h3>
<h3>Destination: <%= link_to @post.destination.name, destination_path(@post.destination) %>

<p><%= @post.content %><p>

<%= form_tag post_path(@post), method: :get do %>
    <%= submit_tag "Like Post", name: :like %>
<% end %>
<p>Likes: <%= @post.likes %></p>
